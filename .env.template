PORT="<< port number, default 8080 >>"
ENVIRONMENT="<< production | development >>"

# Database (Neon DB or any PostgreSQL)
DATABASE_URL="<< PostgreSQL connection string, e.g. postgres://user:password@host:5432/dbname?sslmode=require >>"

# JWT Authentication
JWT_SECRET="<< JWT private key used for signing tokens - generate a strong random string >>"

# Google OAuth 2.0
GOOGLE_CLIENT_ID="<< Google OAuth 2.0 client ID: from Google Cloud Console > APIs & services > Credentials >>"

# Apple Push Notifications (APNS)
APNS_KEY_ID="<< Apple Push Notification Key ID from Apple Developer Console >>"
APNS_TEAM_ID="<< Apple Developer Team ID >>"
APNS_PRIVATE_KEY="<< APNS .p8 private key content >>"
APNS_BUNDLE_ID="<< iOS app bundle identifier, e.g. com.jolt.app >>"

# Firebase Cloud Messaging (FCM)
FCM_PROJECT_ID="<< Firebase/GCP project ID >>"
FCM_PRIVATE_KEY="<< Firebase service account private key >>"

# RevenueCat (In-App Purchases)
REVENUECAT_API_KEY="<< RevenueCat API key >>"